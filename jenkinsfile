pipeline {
    agent any

    tools {
        nodejs 'NodeJS_20'
    }

    environment {
        NODE_ENV = 'test'
        SEP_CREDS = credentials('sep-username')
        SEP_URL = credentials('sep-url')
    }

    triggers {
        cron('H 7,19 * * *') // Runs twice daily at 7 AM (smoke) and 7 PM (regression)
    }

    options {
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'Develop',
                    url: 'https://github.com/Riaz11-coder/Cucumber_Playwright_TypeScript_Automation.git',
                    credentialsId: 'riazahmed-github-creds'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Run Smoke Tests') {
            when {
                expression { new Date().format('HH', TimeZone.getTimeZone('UTC')) == '07' }
            }
            steps {
                configFileProvider([configFile(fileId: 'stripe-vars.json', variable: 'STRIPE_JSON_PATH')]) {
                    sh '''
                        export SEP_USERNAME=${SEP_CREDS_USR}
                        export SEP_PASSWORD=${SEP_CREDS_PSW}
                        export SEP_URL=${SEP_URL}
                        export STRIPE_CREDENTIALS=$STRIPE_JSON_PATH
                        npx cucumber-js --tags "@smoke" --format json:reports/json/cucumber_report.json
                    '''
                }
            }
        }

        stage('Run Regression Tests') {
            when {
                expression { new Date().format('HH', TimeZone.getTimeZone('UTC')) == '19' }
            }
            steps {
                configFileProvider([configFile(fileId: 'stripe-vars.json', variable: 'STRIPE_JSON_PATH')]) {
                    sh '''
                        export SEP_USERNAME=${SEP_CREDS_USR}
                        export SEP_PASSWORD=${SEP_CREDS_PSW}
                        export SEP_URL=${SEP_URL}
                        export STRIPE_CREDENTIALS=$STRIPE_JSON_PATH
                        npx cucumber-js --tags "@regression" --format json:reports/json/cucumber_report.json
                    '''
                }
            }
        }

        stage('Run On Webhook') {
            when {
                not {
                    triggeredBy cause: 'TimerTrigger'
                }
            }
            steps {
                configFileProvider([configFile(fileId: 'stripe-vars.json', variable: 'STRIPE_JSON_PATH')]) {
                    sh '''
                        export SEP_USERNAME=${SEP_CREDS_USR}
                        export SEP_PASSWORD=${SEP_CREDS_PSW}
                        export SEP_URL=${SEP_URL}
                        export STRIPE_CREDENTIALS=$STRIPE_JSON_PATH
                        npx cucumber-js --tags "@webhook" --format json:reports/json/cucumber_report.json
                    '''
                }
            }
        }

        stage('Generate HTML Report') {
            steps {
                sh 'npm run generate-report'
            }
        }

        stage('Deploy to Staging') {
            when {
                allOf {
                    expression { currentBuild.currentResult == 'SUCCESS' }
                    expression { new Date().format('HH', TimeZone.getTimeZone('UTC')) == '19' }
                }
            }
            steps {
                sshagent(credentials: ['riazahmed-github-ssh']) {
                    sh '''
                        git config --global user.email "riaz11@hotmail.com"
                        git config --global user.name "Jenkins CI"

                        git checkout -B staging
                        git push origin staging --force

                        VERSION_TAG=v1.0.${BUILD_NUMBER}
                        git tag $VERSION_TAG
                        git push origin $VERSION_TAG
                    '''
                }
            }
        }
    }

    post {
        always {
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'reports/html',
                reportFiles: 'index.html',
                reportName: 'Cucumber Dashboard Report'
            ])
        }

        failure {
            mail to: 'riaz11@hotmail.com',
                 subject: "‚ùå Jenkins Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build failed at ${env.BUILD_URL}"
        }
    }
}

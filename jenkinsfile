pipeline {
    agent any

    tools {
        nodejs 'NodeJS_20' // Make sure this matches the Node.js tool name in Jenkins config
    }

    environment {
        NODE_ENV = 'test'
        SEP_CREDS = credentials('sep-username')  // Jenkins Credentials ID for username/password
        SEP_URL = credentials('sep-url')         // Jenkins Credentials ID for secret text
    }

    triggers {
        pollSCM('H 5 * * *') // Polls the repo daily at 5 minutes past the hour
    }

    options {
        timestamps()
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git url: 'https://github.com/Riaz11-coder/Cucumber_Playwright_TypeScript_Automation.git', branch: 'Develop'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Build and Lint') {
            steps {
                sh 'npm run lint'
                sh 'npm run build'
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    export SEP_USERNAME=${SEP_CREDS_USR}
                    export SEP_PASSWORD=${SEP_CREDS_PSW}
                    export SEP_URL=${SEP_URL}
                    npm run test
                '''
            }
        }

        stage('Generate HTML Report') {
            steps {
                sh 'npm run generate-report' // This script must be defined in package.json
            }
        }
    }

    post {
        always {
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'reports/cucumber-report.html',
                reportFiles: 'index.html',
                reportName: 'Cucumber HTML Report'
            ])
        }

        failure {
            mail to: 'riaz11@hotmail.com',
                 subject: "‚ùå Jenkins Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Check the Jenkins job: ${env.BUILD_URL}"
        }
    }
}
